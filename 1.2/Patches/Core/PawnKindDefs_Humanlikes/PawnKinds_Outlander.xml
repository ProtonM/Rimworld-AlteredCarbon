<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/PawnKindDef[defName="Town_Guard"]</xpath>
                    <value>
                        <li Class="AlteredCarbon.StackSpawnModExtension">
                            <SpawnsWithStack>true</SpawnsWithStack>
                            <ChanceToSpawnWithStack>5</ChanceToSpawnWithStack>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/PawnKindDef[defName="Town_Trader"]</xpath>
                    <value>
                        <li Class="AlteredCarbon.StackSpawnModExtension">
                            <SpawnsWithStack>true</SpawnsWithStack>
                            <ChanceToSpawnWithStack>8</ChanceToSpawnWithStack>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/PawnKindDef[defName="Town_Councilman"]</xpath>
                    <value>
                        <li Class="AlteredCarbon.StackSpawnModExtension">
                            <SpawnsWithStack>true</SpawnsWithStack>
                            <ChanceToSpawnWithStack>12</ChanceToSpawnWithStack>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>