<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef Name="AC_BrainTemplatesBase" ParentName="ResourceBase" Abstract="True">
        <graphicData>
            <texPath>Things/Item/BrainTemplates/BrainTemplate_Default</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <description>A modification that can be installed in sleeve incubators that tune a sleeves brain to a specific skill, no matter the stack installed. Only one template can be installed in an incubator at a time without overloading it.</description>
        <soundInteract>Standard_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <statBases>
            <MaxHitPoints>10</MaxHitPoints>
            <MarketValue>500</MarketValue>
            <Mass>0.10</Mass>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>1</DeteriorationRate>
            <MarketValue>800</MarketValue>
        </statBases>
        <thingCategories>
            <li>AC_BrainTemplates</li>
        </thingCategories>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>2</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="AC_BrainTemplatesBase">
        <defName>AC_BrainTemplateCombat</defName>
        <label>brain template (combat)</label>
        <comps>
            <li Class="AlteredCarbon.CompProperties_BrainTemplate">
                <hediffs>
                    <li>AC_BrainTemplateCombat</li>
                </hediffs>
                <skillsOffsets>
                    <Melee>5</Melee>
                    <Shooting>5</Shooting>
                </skillsOffsets>
                <skillPassionsOffsets>
                    <Shooting>3</Shooting>
                    <Melee>3</Melee>
                </skillPassionsOffsets>
            </li>
        </comps>
    </ThingDef>
	
    <ThingDef ParentName="AC_BrainTemplatesBase">
        <defName>AC_BrainTemplateWorker</defName>
        <label>brain template (worker)</label>
        <comps>
            <li Class="AlteredCarbon.CompProperties_BrainTemplate">
                <hediffs>
                    <li>AC_BrainTemplateWorker</li>
                </hediffs>
                <skillsOffsets>
                    <Construction>5</Construction>
                    <Mining>5</Mining>
					<Plants>5</Plants>
                </skillsOffsets>
                <skillPassionsOffsets>
                    <Shooting>3</Shooting>
                    <Melee>3</Melee>
					<Plants>3</Plants>
                </skillPassionsOffsets>
            </li>
        </comps>
    </ThingDef>
	
    <ThingDef ParentName="AC_BrainTemplatesBase">
        <defName>AC_BrainTemplateInfiltrator</defName>
        <label>brain template (infiltrator)</label>
        <comps>
            <li Class="AlteredCarbon.CompProperties_BrainTemplate">
                <hediffs>
                    <li>AC_BrainTemplateInfiltrator</li>
                </hediffs>
                <skillsOffsets>
                    <Melee>2</Melee>
                    <Shooting>2</Shooting>
                    <Social>5</Social>
                </skillsOffsets>
                <skillPassionsOffsets>
                    <Social>3</Social>
                    <Shooting>1</Shooting>
                    <Melee>1</Melee>
                </skillPassionsOffsets>
            </li>
        </comps>
    </ThingDef>

</Defs>