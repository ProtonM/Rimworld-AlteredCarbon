<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>AC_SleeveIncubator</defName>
        <label>sleeve incubator</label>
        <description>An ultra-tech vat tank connected to advanced life support systems and an AI core. Used by the rich 1% on ultra-tech worlds and less trustworthy individuals on rimworlds to grow custom sleeves, the sleeve incubator is capable of growing any human body one can imagine.</description>
		<thingClass>AlteredCarbon.Building_SleeveGrower</thingClass>
		<tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Building/Furniture/Bed/HospitalBed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(3.5,3.5)</drawSize>
            <shaderType>CutoutComplex</shaderType>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <costList>
            <Steel>250</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <neverMultiSelect>true</neverMultiSelect>
        <uiIconScale>0.5</uiIconScale>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>800</WorkToBuild>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Mass>50</Mass>
            <Beauty>-5</Beauty>
        </statBases>
        <minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<designationCategory>Misc</designationCategory>
        <size>(3,3)</size>
        <techLevel>Ultra</techLevel>
        <passability>PassThroughOnly</passability>
        <pathCost>70</pathCost>
        <surfaceType>Item</surfaceType>
		<researchPrerequisites>
		  <li>AC_SleeveProduction</li>
		</researchPrerequisites>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>2500</basePowerConsumption>
            </li>
			<li Class="CompProperties_Refuelable">
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<fuelConsumptionRate>0</fuelConsumptionRate>
				<fuelCapacity>100.0</fuelCapacity>
				<fuelConsumptionPerTickInRain>0</fuelConsumptionPerTickInRain>
				<fuelFilter>
					<thingDefs>
						<li>Meat_Human</li>
					</thingDefs>
				</fuelFilter>
				<initialFuelPercent>1</initialFuelPercent>
				<showAllowAutoRefuelToggle>false</showAllowAutoRefuelToggle>
			</li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Breakdownable" />
        </comps>
    </ThingDef>

    <ThingDef ParentName="BedWithQualityBase">
        <defName>AC_SleeveCasket</defName>
        <label>sleeve casket</label>
        <description>An ultra-tech casket used for storing grown sleeves before their stack is installed. It uses crypto tech technology to suspend the needs of the sleeves body, while still allowing for the installation of implants or bionics.</description>
        <graphicData>
            <texPath>Things/Building/Furniture/Bed/HospitalBed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <castEdgeShadows>True</castEdgeShadows>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToBuild>2800</WorkToBuild>
            <Mass>35</Mass>
            <Flammability>1.0</Flammability>
            <BedRestEffectiveness>1</BedRestEffectiveness>
            <Comfort>0.80</Comfort>
            <ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
            <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
            <SurgerySuccessChanceFactor>1.5</SurgerySuccessChanceFactor>
        </statBases>
        <size>(1,2)</size>
        <costList>
            <Steel>80</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
        <building>
            <bed_showSleeperBody>true</bed_showSleeperBody>
            <bed_healPerDay>25</bed_healPerDay>
            <bed_defaultMedical>true</bed_defaultMedical>
        </building>
        <fillPercent>0.4</fillPercent>
        <pathCost>60</pathCost>
        <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
        <staticSunShadowHeight>0.17</staticSunShadowHeight>
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <techLevel>Ultra</techLevel>
        <uiIconScale>0.90</uiIconScale>
		<researchPrerequisites>
		  <li>AC_SleeveProduction</li>
		</researchPrerequisites>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>500</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Breakdownable" />      
			<li Class="CompProperties_Forbiddable"/>
        </comps>
    </ThingDef>

</Defs>